{
  "name": "website",
  "author": "Matthieu Vion <contact@mvion.fr>",
  "license": "Apache-2.0",
  "private": true,
  "version": "1.0.0",
  "description": "Personal website",
  "dependencies": {
    "sanitize.css": "^11.0.0",
    "super-tiny-icons": "^0.3.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "del-cli": "^3.0.0",
    "hyperlink": "^4.4.3",
    "npm-run-all": "^4.1.5",
    "sass": "^1.25.1-test.1",
    "tap-spot": "^1.1.1"
  },
  "scripts": {
    "11ty:serve": "eleventy --serve",
    "11ty:build": "eleventy",
    "check:link": "hyperlink _site/index.html --canonicalroot https://mvion.fr -r _site/index.html | tap-spot",
    "prebuild": "del _site/**/*",
    "build": "run-s sass:build 11ty:build",
    "postbuild": "run-s check:link",
    "sass:build": "sass -I node_modules/sanitize.css src/styles/_index.scss:_site/styles/index.css --no-source-map",
    "sass:watch": "sass --watch -I node_modules/sanitize.css src/styles/_index.scss:_site/styles/index.css",
    "watch": "run-p 11ty:serve sass:watch"
  },
  "keywords": [
    "eleventy"
  ]
}
